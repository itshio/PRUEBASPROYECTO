<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="botones_mas">

        <item name="android:text">+</item>
        <item name="android:color">@color/black</item>
        <item name="android:textSize">@dimen/sp30</item>
        <item name="android:width">@dimen/d50</item>
        <item name="android:height">@dimen/d50</item>
        <item name="android:background">@drawable/boton</item>
        <item name="android:layout_marginRight">@dimen/d15</item>
        <item name="android:layout_marginLeft">@dimen/d15</item>



    </style>

    <style name="botones_menos">

        <item name="android:text">-</item>
        <item name="android:color">@color/black</item>
        <item name="android:textSize">@dimen/sp30</item>
        <item name="android:width">@dimen/d50</item>
        <item name="android:height">@dimen/d50</item>
        <item name="android:background">@drawable/boton</item>


    </style>

    <style name="margin_layout">

        <item name="android:layout_marginBottom">@dimen/d5</item>

    </style>

    <style name="letra">

        <item name="android:textSize">@dimen/d20</item>
        <item name="android:textColor">@color/black</item>

    </style>

</resources>
